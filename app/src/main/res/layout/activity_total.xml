<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".screens.Total">

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/gan"
        android:text="ראשי"
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_TUpdate"
        android:layout_width="294dp"
        android:layout_height="74dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/btn_blue_selector"
        android:fontFamily="@font/varelaround"
        android:text="עדכון פרטים"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_TUserList"
        android:layout_width="294dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/btn_blue_selector"
        android:fontFamily="@font/varelaround"
        android:text="רשימת משתמשים"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_TUpdate"
        app:layout_constraintVertical_bias="0.016" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_TLogout"
        android:layout_width="294dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/btn_blue_selector"
        android:fontFamily="@font/varelaround"
        android:text="התנתקות"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_TUserList"
        app:layout_constraintVertical_bias="0.012" />


</androidx.constraintlayout.widget.ConstraintLayout>
